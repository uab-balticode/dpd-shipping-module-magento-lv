<config>
    <modules>
        <Balticode_DpdLT>
            <version>0.1.5</version>
        </Balticode_DpdLT>
    </modules>
    
    
    <frontend>
        <layout>
            <updates>
                <balticode_dpdlt>
                    <file>balticode_dpdlt.xml</file>
                </balticode_dpdlt>
            </updates>
        </layout>
        <translate>
            <modules>
                <balticode_dpdlt>
                    <files>
                        <default>Balticode_DpdLT.csv</default>
                    </files>
                </balticode_dpdlt>
            </modules>
        </translate>
    </frontend>
    
    <adminhtml>
        <layout>
            <updates>
                <balticode_dpdlt>
                    <file>balticode_dpdlt.xml</file>
                </balticode_dpdlt>
            </updates>
        </layout>
        <translate>
            <modules>
                <balticode_dpdlt>
                    <files>
                        <default>Balticode_DpdLT.csv</default>
                    </files>
                </balticode_dpdlt>
            </modules>
        </translate>
        <events>
            <sales_order_shipment_save_after>
                <observers>
                    <balticode_dpdlt_add_tracking_number>
                        <type>model</type>  
                        <class>Balticode_DpdLT_Model_Observer</class>  
                        <method>addTrackingToShipment</method>  
                    </balticode_dpdlt_add_tracking_number>
                </observers>  
            </sales_order_shipment_save_after>
            <controller_action_predispatch>
                <observers>
                    <balticode_dpdlt>
                        <class>Balticode_DpdLT_Model_Observer</class>
                        <method>preDispatch</method>
                    </balticode_dpdlt>
                </observers>
            </controller_action_predispatch>
        </events>        
        
    </adminhtml>
    
    <admin>
        
        <translate>
            <modules>
                <balticode_dpdlt>
                    <files>
                        <default>Balticode_DpdLT.csv</default>
                    </files>
                </balticode_dpdlt>
            </modules>
        </translate>
        <routers>
            <balticode_dpdlt>
                <use>admin</use>
                <args>
                    <module>Balticode_DpdLT</module>
                    <frontName>balticode_dpdlt</frontName>
                </args>
            </balticode_dpdlt>
        </routers>
            
    </admin>
    
    <global>
        <models>
            <balticode_dpdlt>
                <class>Balticode_DpdLT_Model</class>
            </balticode_dpdlt>
        </models>
        <blocks>
            <balticode_dpdlt>
                <class>Balticode_DpdLT_Block</class>
            </balticode_dpdlt>
        </blocks>
        <resources>
            <balticode_dpdlt_setup>
                <setup>
                    <module>Balticode_DpdLT</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </balticode_dpdlt_setup>
            <balticode_dpdlt_write>
                <setup>
                    <module>Balticode_DpdLT</module>
                </setup>
                <connection>
                    <use>core_write</use>
                </connection>
            </balticode_dpdlt_write>
            <balticode_dpdlt_read>
                <setup>
                    <module>Balticode_DpdLT</module>
                </setup>
                <connection>
                    <use>core_read</use>
                </connection>
            </balticode_dpdlt_read>
        </resources>
        <helpers>
            <balticode_dpdlt>
                <class>Balticode_DpdLT_Helper</class>
            </balticode_dpdlt>
        </helpers>

    
    </global>
