<layout>
    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method="setTemplate">
                <template>balticode_postoffice/available.phtml</template>
            </action>
            
        </reference>
    </checkout_onepage_shippingmethod>
    <checkout_cart_index>
        <reference name="content">
            <reference name="checkout.cart">
                <reference name="checkout.cart.shipping">
                    <action method="setTemplate">
                        <template>balticode_postoffice/shipping.phtml</template>
                    </action>
                    
                </reference>
            </reference>
            
        </reference>
    </checkout_cart_index>
    <checkout_multishipping_shipping>
        <reference name="content">
            <reference name="checkout_shipping">
                <action method="setTemplate">
                    <template>balticode_postoffice/multishipping.phtml</template>
                </action>
            </reference>
        </reference>
    </checkout_multishipping_shipping>
    <shipping_tracking_popup>
        <reference name="content">
            <reference name="shipping.tracking.popup">
                <action method="setTemplate">
                    <template>balticode_postoffice/tracking/popup.phtml</template>
                </action>
            </reference>
        </reference>
        
    </shipping_tracking_popup>
  
    
</layout>
